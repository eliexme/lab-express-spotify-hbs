<div class="list">
    {{#each tracksArray}}
        <div class="card">
            <h3>{{this.name}}</h3>

            {{#if this.preview_url}}
                <audio controls>
                    <source src={{this.preview_url}} type="audio/mpeg">
                        Your browser does not support the audio tag.
                </audio>
            {{else}}
                <p><b>No preview available! Sorry!</b></p>
            {{/if}}
        </div>
    {{/each}}   
</div>
